<h1>Index</h1>
<div class="row">
    {{#each articles}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
               <a href="/articles/edit/{{id}}" class="btn-floating halfway-fab red">
                <i class="fa fa-pencil"></i>
               </a> 
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="article-text">{{body}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="Contact Person">
                    {{user.firstName}} {{user.lastName}}
                </div>
            </div>
            <div class="card-action center-align">
            <div class="btn grey" href="/articles/show/{{id}}">Read More</div>
            </div>
        </div>
    </div>
    {{else}}
    <p>No articles found</p>
    {{/each}}
</div>